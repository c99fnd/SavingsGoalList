<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/goal_list_item_margin">

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/text_background_tint"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_title"
                style="@style/TextStyle.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/list_item_subtitle"
                style="@style/TextStyle.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <ProgressBar
                android:id="@+id/list_item_progress"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="@dimen/goal_list_progress_bar_margin"
                android:layout_marginLeft="@dimen/goal_list_progress_bar_margin"
                android:layout_marginRight="@dimen/goal_list_progress_bar_margin"
                android:layout_marginStart="@dimen/goal_list_progress_bar_margin"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_shape" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>