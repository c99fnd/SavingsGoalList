<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_list_item_height"
    android:padding="@dimen/feed_list_padding">

    <ImageView
        android:id="@+id/feed_item_avatar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingStart="@dimen/feed_list_padding"
        android:paddingLeft="@dimen/feed_list_padding">

        <TextView
            android:id="@+id/feed_item_message"
            style="@style/TextStyle.List.FeedText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/feed_item_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/feed_list_padding"
                android:layout_marginEnd="@dimen/feed_list_padding"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/feed_item_time"
                style="@style/TextStyle.List.TimeText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/feed_item_ammount"
        style="@style/TextStyle.List.AmountText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal" />
</LinearLayout>